<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".cookSelection.Frame23">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cookpic23"
                android:layout_width="match_parent"
                android:layout_height="332dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_background" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cross"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="18dp"
                app:cardBackgroundColor="@color/secondaryblue"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_close_24"
                    app:tint="@color/black" />

            </androidx.cardview.widget.CardView>

            <com.sinaseyfi.advancedcardview.AdvancedCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="14dp"
                android:layout_marginTop="238dp"
                android:layout_marginEnd="14dp"
                app:background_Color="@color/secondaryblue"
                app:cornerRadius_TopLeft="60dp"
                app:cornerRadius_TopRight="60dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="23dp"
                        android:fontFamily="@font/nb"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="36sp"
                        tools:text="Asahi-san" />

                    <LinearLayout
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nl"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            tools:text="4.2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="-2dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_star" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/noreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/stars"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nl"
                        android:text="(25 Reviews)"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/attributes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/noreview"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="19dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="28dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_star1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/nl"
                                android:text="Behaviour"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="28dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_star1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/nl"
                                android:text="Food Taste"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="44dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_star1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14dp"
                                android:fontFamily="@font/nl"
                                android:text="Punctuality"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/can"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/attributes"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="Can Speak"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/canspeak"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_below="@id/can"
                        android:layout_marginTop="13dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/can1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/canspeak"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/nb"
                        android:text="Can Cook"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/can1recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/can1"
                        android:layout_marginTop="13dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/can1recycler"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="Available For"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/slots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/available"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nb"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="2-3 PM\n9-10 AM\n11-12 AM" />

                    <TextView
                        android:id="@+id/some"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/slots"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="Some Pictures"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/some"
                        android:layout_marginTop="16dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/photos"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="Background"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/back"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="112dp"
                        android:fontFamily="@font/nl"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:text="From Banglore east, known for exceptional chinese cuisine." />

                </RelativeLayout>

            </com.sinaseyfi.advancedcardview.AdvancedCardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>