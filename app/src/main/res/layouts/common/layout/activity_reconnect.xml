<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".common.Reconnect">

    <androidx.cardview.widget.CardView
        android:id="@+id/backreconn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="@color/secondaryblue"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backreconn"
        android:layout_marginStart="40dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/nb"
        android:text="Whoops!"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/reconnsvg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_reconnnect" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reconnsvg"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/nl"
        android:text="Dang it! Looks like someone spilled pasta sauce on the server again."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/reconn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nb"
            android:text="RECONNECT"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>