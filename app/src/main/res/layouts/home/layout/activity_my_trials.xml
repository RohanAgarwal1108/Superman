<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".home.MyTrials">

    <androidx.cardview.widget.CardView
        android:id="@+id/backtrials"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="@color/secondaryblue"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/backtrials"
        android:layout_alignBottom="@id/backtrials"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nb"
        android:gravity="center_vertical"
        android:text="My Trials"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backtrials"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/nb"
            android:text="Ongoing"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:id="@+id/ongoingtrial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ongoing"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            app:cornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/cookdet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="6dp">

                    <com.sinaseyfi.advancedcardview.AdvancedCardView
                        android:id="@+id/trialimgcard"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_centerVertical="true"
                        app:cornerRadius="16.5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@mipmap/ic_launcher" />

                    </com.sinaseyfi.advancedcardview.AdvancedCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toStartOf="@id/supercode"
                        android:layout_toEndOf="@id/trialimgcard"
                        android:fontFamily="@font/nb"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Yotsuba Nakano" />

                    <LinearLayout
                        android:id="@+id/supercode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nl"
                            android:text="Super-Code"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/nb"
                            android:textColor="@color/yellow"
                            android:textSize="16sp"
                            tools:text="4567" />

                    </LinearLayout>

                </RelativeLayout>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:id="@+id/circle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/cookdet"
                    android:layout_marginStart="-12.5dp"
                    app:background_Color="@color/primaryblue"
                    app:cornerRadius="12.5dp" />

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/cookdet"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-12.5dp"
                    app:background_Color="@color/primaryblue"
                    app:cornerRadius="12.5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/cookdet"
                    android:layout_marginTop="12.5dp"
                    android:background="@color/primaryblue" />

                <RelativeLayout
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circle"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp">

                    <TextView
                        android:id="@+id/meals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nl"
                        android:text="Meals"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/meals"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nl"
                            android:lineSpacingExtra="6dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:text="Panner Chilli x 2\nPanner Chilli x 2\nPanner Chilli x 2" />

                    </FrameLayout>

                </RelativeLayout>

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:id="@+id/circle1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/order"
                    android:layout_marginStart="-12.5dp"
                    app:background_Color="@color/primaryblue"
                    app:cornerRadius="12.5dp" />

                <com.sinaseyfi.advancedcardview.AdvancedCardView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/order"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-12.5dp"
                    app:background_Color="@color/primaryblue"
                    app:cornerRadius="12.5dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/order"
                    android:layout_marginTop="12.5dp"
                    android:background="@color/primaryblue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/circle1"
                    android:layout_marginStart="42dp"
                    android:layout_marginEnd="42dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nl"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="25th March  12:30 PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/nl"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Estancia 1420, Chennai" />

                </LinearLayout>

            </RelativeLayout>

        </com.sinaseyfi.advancedcardview.AdvancedCardView>

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ongoingtrial"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nb"
            android:text="Need Help?"
            android:textColor="#c4c4c4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/previouscook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/help"
            android:layout_marginStart="30dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/nb"
            android:text="Previous Trials"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/previouscook"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            app:background_Color="#F9F9F9"
            app:cornerRadius_TopLeft="60dp"
            app:cornerRadius_TopRight="60dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:visibility="invisible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.sinaseyfi.advancedcardview.AdvancedCardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backtrials"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/nb"
            android:text="You look lonely!"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="285dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_lonely" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="33dp"
                android:fontFamily="@font/nb"
                android:text="Looks like you havent found your just match yet."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="33dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="33dp"
                android:fontFamily="@font/nl"
                android:text="Let’s explore and get the perfect fit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/next110"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nb"
                android:text="FIND COOKS NOW"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>