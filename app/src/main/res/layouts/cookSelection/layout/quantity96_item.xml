<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/quantimgcard"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="19.5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/quantimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/quanttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/quants"
        android:layout_toEndOf="@id/quantimgcard"
        android:fontFamily="@font/nb"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Panner Butter Masala" />

    <LinearLayout
        android:id="@+id/quants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>