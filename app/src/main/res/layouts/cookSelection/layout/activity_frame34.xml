<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".cookSelection.Frame34">

    <androidx.cardview.widget.CardView
        android:id="@+id/back34"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="@color/secondaryblue"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back34"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/nb"
        android:text="Let’s schedule a trial to please your taste buds!"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lets"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        app:background_Color="@color/secondaryblue"
        app:cornerRadius_TopLeft="60dp"
        app:cornerRadius_TopRight="60dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tdhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/nb"
                    android:text="Time and Date"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/timedetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tdhead"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="13dp">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:background="#FFC542"
                        android:fontFamily="@font/nl"
                        android:text=" Tue, 25th Jan 2021 "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:layout_toEndOf="@id/date"
                        android:background="#FFC542"
                        android:fontFamily="@font/nl"
                        android:text=" 10:20 "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/time"
                        android:background="#FFC542"
                        android:fontFamily="@font/nl"
                        android:text=" AM "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/whereshall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timedetails"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/nb"
                    android:text="Where shall we send our superman?"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/whereshall"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="28dp">

                    <ImageView
                        android:id="@+id/gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_gps" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_toStartOf="@id/gps"
                        android:fontFamily="@font/nl"
                        android:text="25- BLA, Next to Forum Mall,  Estancia, Chennai"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/howhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/nb"
                    android:text="This is how your meal looks like"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/pickmeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/howhead"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/finalizedrecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="28sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/nofinalized"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/havent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginEnd="28sp"
                            android:fontFamily="@font/nl"
                            android:text="You haven’t picked aynting yet, let pick something."
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/choose"
                            android:layout_width="188dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            app:cardBackgroundColor="#FFC542"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="186dp"
                                android:layout_height="34dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/nl"
                                    android:text="Choose Meal"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/addnotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pickmeals"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="28dp"
                    android:fontFamily="@font/nb"
                    android:text="Add notes:"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@id/addnotes"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="112dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@null"
                        android:fontFamily="@font/nb"
                        android:hint="Yeah, even superman needs instructions!"
                        android:textColor="@color/black"
                        android:textColorHint="#C4C4C4"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    </com.sinaseyfi.advancedcardview.AdvancedCardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/next34"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nb"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>