<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".authentication.Frame47">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/back47"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="34dp"
            app:cardBackgroundColor="@color/secondaryblue"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/back47"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nb"
            android:text="Details"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <com.sinaseyfi.advancedcardview.AdvancedCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/details"
            android:layout_marginStart="14dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="14dp"
            app:background_Color="#F9F9F9"
            app:cornerRadius_TopLeft="60dp"
            app:cornerRadius_TopRight="60dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/photocard"
                        android:layout_width="132dp"
                        android:layout_height="132dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#C4C4C4"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/camcard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/photocard"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/black"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camera" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/camcard"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nl"
                            android:text="*"
                            android:textColor="@color/black"
                            android:textSize="48sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/nl"
                            android:text="required(you can cat fish ;))"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/namehead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/required"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="-21dp"
                        android:fontFamily="@font/nb"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/namehead"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#08000000"
                        app:cardCornerRadius="20sp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/nameedit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/namehead"
                            android:layout_marginStart="26dp"
                            android:layout_marginEnd="26dp"
                            android:background="@android:color/transparent"
                            android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                            android:fontFamily="@font/nb"
                            android:hint="Jake Parolta"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#C4C4C4"
                            android:textSize="18sp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/wherehead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="Where do you belong to?"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/wherehead"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        android:elevation="-2dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/wherecard"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/wherehead"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="15dp"
                        android:elevation="2dp"
                        app:cardBackgroundColor="#08000000"
                        app:cardCornerRadius="20sp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="26dp"
                                android:layout_toStartOf="@id/spinnericon"
                                android:fontFamily="@font/nb"
                                android:hint="Maharashtra"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="#C4C4C4"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/spinnericon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="26dp"
                                android:src="@drawable/ic_spinner" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/pinhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wherecard"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="27dp"
                        android:fontFamily="@font/nb"
                        android:text="City"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/pinhead"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#08000000"
                        app:cardCornerRadius="20sp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/namehead"
                            android:layout_marginStart="26dp"
                            android:layout_marginEnd="26dp"
                            android:background="@android:color/transparent"
                            android:digits="qwertyuiopasdfghjklzxcvbnm QWERTYUIOPASDFGHJKLZXCVBNM"
                            android:fontFamily="@font/nb"
                            android:hint="Lucknow"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#C4C4C4"
                            android:textSize="18sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/next47"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_below="@+id/pincode"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="34dp"
                        android:layout_marginBottom="24dp"
                        app:cardBackgroundColor="@color/black"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nb"
                            android:text="NEXT"
                            android:textColor="@color/white"
                            android:textSize="28sp" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </ScrollView>

        </com.sinaseyfi.advancedcardview.AdvancedCardView>

    </RelativeLayout>

</RelativeLayout>