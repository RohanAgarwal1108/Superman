<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryblue"
    tools:context=".authentication.Frame38">

    <androidx.cardview.widget.CardView
        android:id="@+id/back38"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        app:cardBackgroundColor="@color/secondaryblue"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sendto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back38"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nb"
        android:text="Enter code sent to"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendto"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:textColor="@color/black"
            android:textSize="34sp"
            tools:text="4204204200" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@id/number"
            android:fontFamily="@font/nl"
            android:text="(edit)"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/phone"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        app:background_Color="#F9F9F9"
        app:cornerRadius_TopLeft="60dp"
        app:cornerRadius_TopRight="60dp" />

    <LinearLayout
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card"
        android:layout_marginStart="14dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp"
            tools:text="6" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:cursorVisible="false"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/didnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nl"
            android:text="Didnâ€™t receive? "
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nb"
            android:text="Resend"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/nh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/next38"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/nb"
        android:text="Need help?"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/next38"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/disabledbutton"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nb"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>